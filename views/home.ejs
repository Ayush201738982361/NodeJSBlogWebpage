<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("./partials/head") %>
    <title>Home</title>
  </head>
  <body>
    <%- include("./partials/scripts") %> <%- include("./partials/nav") %>

    <div class="container">
      <% blogs.forEach(blog => { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.body %></p>
          <p class="card-text">
            <small class="text-body-secondary"><%= blog.createdAt %></small>
          </p>
          <a href="/blogs/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
